@{
    List<AuditModel> logs = ViewBag.EmployeeLogs;
}

<h1>Employee Logs</h1>
<a href="@Url.Action("SendEmail", "Home")" class="btn btn-primary">Wyslij zgloszenie</a>

@if (logs != null && logs.Count > 0)
{
    <table style="border-collapse: collapse; width: 100%;">
        <thead>
            <tr>
                <th style="border: 1px solid black; padding: 8px;">Id</th>
                <th style="border: 1px solid black; padding: 8px;">Operation Type</th>
                <th style="border: 1px solid black; padding: 8px;">Date</th>
                <th style="border: 1px solid black; padding: 8px;">Message</th>
                <th style="border: 1px solid black; padding: 8px;">Executing User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in logs)
            {
                <tr>
                    <td style="border: 1px solid black; padding: 8px;">@log.Id</td>
                    <td style="border: 1px solid black; padding: 8px;">@log.OperationType</td>
                    <td style="border: 1px solid black; padding: 8px;">@log.Date.ToString("yyyy-MM-dd")</td>
                    <td style="border: 1px solid black; padding: 8px;">@log.Message</td>
                    <td style="border: 1px solid black; padding: 8px;">@log.ExecutingUser</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No logs available.</p>
}








